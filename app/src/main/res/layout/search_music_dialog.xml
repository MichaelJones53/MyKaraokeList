<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searching_music"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="50dp"
    android:background="@drawable/music_loading_background"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/musicBarImageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/music_bar"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="2dp" />

    <ImageView
        android:id="@+id/note3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/note_1_filled"
        app:layout_constraintRight_toLeftOf="@+id/note4"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
         />

    <ImageView
        android:id="@+id/note4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/note_2_empty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintRight_toRightOf="parent"
         />

    <ImageView
        android:id="@+id/note2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/note_1_empty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/note3"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintVertical_bias="0.498" />

    <ImageView
        android:id="@+id/note1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/note2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/note_2_filled"
         />
</android.support.constraint.ConstraintLayout>